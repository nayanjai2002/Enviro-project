<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="4dp"
    android:background="@drawable/background_forall">

    <ImageView
        android:id="@+id/dailytask_imageView"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/dailytask_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/dailytask_imageView"
        android:text="TASK 1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#E42E2E"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dailytask_imageView"
        app:layout_constraintTop_toTopOf="@+id/dailytask_imageView" />

    <TextView
        android:id="@+id/dailytask_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dailytask_no"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:layout_toRightOf="@id/dailytask_imageView"
        android:fontFamily="@font/carrois_gothic"
        android:text="Plant a small plant"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dailytask_imageView"
        app:layout_constraintTop_toBottomOf="@+id/dailytask_no" />

    <TextView
        android:id="@+id/dailytask_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="06-MONDAY "
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dailytask_imageView"
        app:layout_constraintTop_toBottomOf="@+id/dailytask_body" />

</androidx.constraintlayout.widget.ConstraintLayout>
